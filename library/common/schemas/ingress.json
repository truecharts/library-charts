{
  "instance": {
    "type": "object",
    "additionalProperties": true,

    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },

      "annotations": {
        "$ref": "definitions.json#/annotations"
      },

      "className": {
        "type": "string"
      },

      "defaultBackend": {
        "type": "string"
      },

      "hosts": {
        "type": "array",
        "items": {
          "$ref": "#/hostEntry"
        }
      },

      "labels": {
        "$ref": "definitions.json#/labels"
      },

      "nameOverride": {
        "type": "string"
      },

      "tls": {
        "type": "array",
        "items": {
          "$ref": "#/tlsEntry"
        }
      }
    },
    "required": ["hosts"]
  },

  "hostEntry": {
    "additionalProperties": true,
    "properties": {
      "host": {
        "type": "string"
      },
      "paths": {
        "items": {
          "additionalProperties": true,
          "properties": {
            "path": {
              "type": "string"
            },
            "pathType": {
              "type": "string",
              "default": "Prefix"
            },

            "service": {
              "oneOf": [
                {"$ref": "#/serviceReferenceByName"},
                {"$ref": "#/serviceReferenceByIdentifier"}
              ]
            }
          },
          "required": ["path", "service"]
        },
        "title": "paths",
        "type": "array"
      }
    },
    "required": ["host", "paths"]
  },

  "tlsEntry": {
    "additionalProperties": true,
    "properties": {
      "hosts": {
        "type": "array",
        "items": {
          "type": ["string"]
        }
      },
      "secretName": {
        "type": "string"
      }
    },
    "required": ["hosts"]
  },

  "serviceReferenceByName": {
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "name": {
        "type": "string"
      },
      "port": {
        "type": ["integer"]
      }
    },
    "required": ["name", "port"]
  },

  "serviceReferenceByIdentifier": {
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "identifier": {
        "type": "string"
      },
      "port": {
        "type": ["string", "integer"]
      }
    },
    "required": ["identifier"]
  }
}
